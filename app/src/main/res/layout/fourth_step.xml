<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical">

    <Space
        android:layout_width="match_parent"
        android:layout_height="80dp" />

    <TextView
        android:id="@+id/player_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/fourth_step_player_name"
        android:textSize="30sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <ImageView
        android:id="@+id/maincard"
        android:layout_width="90dp"
        android:layout_height="140dp"
        android:layout_gravity="center"
        android:background="@android:color/background_light"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/hearts_q" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/challenge"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/fourth_step_challenge_string"
        android:textSize="24sp" />

    <Button
        android:id="@+id/go"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Continue" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/card1_button"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:scaleType="fitXY"
            android:src="@drawable/back_p" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/card2_button"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:scaleType="fitXY"
            android:src="@drawable/back_p" />

        <Space
            android:layout_width="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/card3_button"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:scaleType="fitXY"
            android:src="@drawable/hearts_q" />

        <Space
            android:layout_width="20dp"
            android:layout_height="106dp"
            android:layout_weight="1" />

        <ImageButton
            android:id="@+id/card4_button"
            android:layout_width="90dp"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:background="@android:color/background_light"
            android:scaleType="fitXY"
            android:src="@drawable/back_p" />
    </LinearLayout>
</LinearLayout>